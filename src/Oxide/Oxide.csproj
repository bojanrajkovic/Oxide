<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.3</TargetFramework>
    <DebugType>full</DebugType>
    <GitInfoReportImportance>high</GitInfoReportImportance>
    <GitSkipCache>true</GitSkipCache>
    <GitVersionFile>Oxide.version</GitVersionFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Oxide</PackageId>
    <Authors>Bojan Rajkovic</Authors>
    <Title>Oxide</Title>
    <Description>A library of Rust-like types and helpers for .NET.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>$(ReleaseNotes)</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/bojanrajkovic/Oxide</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/bojanrajkovic/Oxide/master/LICENSE</PackageLicenseUrl>
    <PackageTags>rust functional</PackageTags>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
    <RepositoryUrl>https://github.com/bojanrajkovic/Oxide</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;  </DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitInfo" Version="1.1.63" PrivateAssets="All" />
    <PackageReference Include="System.Threading" Version="4.3.0" />
    <PackageReference Include="System.Threading.Tasks" Version="4.3.0" />
    <PackageReference Include="System.Runtime" Version="4.3.0" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.3.0" />
  </ItemGroup>

  <Target Name="SetVersion" DependsOnTargets="GitInfo" BeforeTargets="CoreCompile;GetAssemblyVersion;GenerateNuspec;_GenerateRestoreProjectSpec;EnsureWixToolsetInstalled" Condition="'$(GitInfoImported)' == 'True'">
    <PropertyGroup>
      <VersionPrefix>$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)</VersionPrefix>
      <VersionSuffix Condition="'$(GitBranch)' == 'master'">$(GitSemVerDashLabel)</VersionSuffix>
      <VersionSuffix Condition="'$(GitBranch)' != 'master'">$(GitSemVerDashLabel)-$(GitBranch)-$(GitCommit)</VersionSuffix>
      <PackageVersion Condition="'$(GitBranch)' == 'master'">$(VersionPrefix)$(VersionSuffix)</PackageVersion>
      <PackageVersion Condition="'$(GitBranch)' != 'master'">$(VersionPrefix)$(VersionSuffix)</PackageVersion>
    </PropertyGroup>
    <Message Importance="high" Text="##teamcity[buildNumber '$(PackageVersion)']" Condition="'$(TEAMCITY_VERSION)' != ''" />
    <Message Importance="high" Text="##teamcity[setParameter name='VersionPrefix' value='$(VersionPrefix)']" Condition="'$(TEAMCITY_VERSION)' != ''" />
    <Message Importance="high" Text="##teamcity[setParameter name='VersionSuffix' value='$([System.String]::Copy('$(VersionSuffix)').TrimStart('-'))']" Condition="'$(TEAMCITY_VERSION)' != ''" />
    <Exec Command="appveyor SetVariable -Name VersionPrefix -Value &quot;$(VersionPrefix)&quot;"  Condition="'$(APPVEYOR)' == 'True'" />
    <Exec Command="appveyor SetVariable -Name VersionSuffix -Value &quot;$([System.String]::Copy('$(VersionSuffix)').TrimStart('-'))&quot;"  Condition="'$(APPVEYOR)' == 'True'" />
    <Exec Command="appveyor UpdateBuild -Version &quot;$(PackageVersion)&quot;" Condition="'$(APPVEYOR)' == 'True'" />
  </Target>
</Project>
