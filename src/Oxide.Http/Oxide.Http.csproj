<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <DebugType>full</DebugType>
    <TargetFramework>netstandard1.4</TargetFramework>
    <GitInfoReportImportance>high</GitInfoReportImportance>
    <GitSkipCache>true</GitSkipCache>
    <GitVersionFile>Oxide.version</GitVersionFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Oxide.Http</PackageId>
    <Authors>Bojan Rajkovic</Authors>
    <Title>Oxide.Http</Title>
    <Description>HTTP extensions using Oxide.</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageReleaseNotes>$(ReleaseNotes)</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/bojanrajkovic/Oxide</PackageProjectUrl>
    <PackageLicenseUrl>https://raw.github.com/bojanrajkovic/Oxide/master/LICENSE</PackageLicenseUrl>
    <PackageTags>rust functional http</PackageTags>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyFileVersionAttribute>false</GenerateAssemblyFileVersionAttribute>
    <GenerateAssemblyInformationalVersionAttribute>false</GenerateAssemblyInformationalVersionAttribute>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="GitInfo" Version="1.1.63" />
    <PackageReference Include="System.Net.Http" Version="4.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Oxide\Oxide.csproj" />
  </ItemGroup>

  <Target Name="SetVersion" DependsOnTargets="GitInfo" BeforeTargets="CoreCompile;GetAssemblyVersion;GenerateNuspec;_GenerateRestoreProjectSpec;EnsureWixToolsetInstalled" Condition="$(GitInfoImported) == 'True'">
    <PropertyGroup>
      <VersionPrefix>$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)</VersionPrefix>
      <VersionSuffix>$(GitSemVerLabel)</VersionSuffix>
      <PackageVersion Condition="'$(GitBranch)' == 'master'">$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)$(GitSemVerDashLabel)</PackageVersion>
      <PackageVersion Condition="'$(GitBranch)' != 'master'">$(GitSemVerMajor).$(GitSemVerMinor).$(GitSemVerPatch)$(GitSemVerDashLabel)+$(GitBranch)-$(GitCommit)</PackageVersion>
    </PropertyGroup>
  </Target>
</Project>
